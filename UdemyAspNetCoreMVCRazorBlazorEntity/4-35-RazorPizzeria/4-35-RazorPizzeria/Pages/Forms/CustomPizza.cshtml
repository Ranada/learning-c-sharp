@page
@model _4_35_RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-left container">
    <h1>Create Your Own Pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name..."/><br/>
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce" /> TomatoSauce <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" /> Cheese <br />
        <input type="checkbox" asp-for="Pizza.Pepperoni" placeholder="Pepperoni" /> Pepperoni <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" /> Mushroom <br />
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" /> Tuna <br/>
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" /> Pineapple <br />
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" /> Ham <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" /> Beef <br />
        <input type="number" asp-for="Pizza.BasePrice" placeholder="BasePrice" /> BasePrice <br />
        <input type="number" asp-for="Pizza.FinalPrice" placeholder="FinalPrice" /> FinalPrice <br />
        <button class="btn btn-primary mt-1" type="submit">ORDER MY PIZZA</button>
    </form>
</div>